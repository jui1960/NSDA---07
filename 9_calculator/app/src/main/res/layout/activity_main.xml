<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.dp"
        android:padding="5.dp"
        android:text="Calculator"
        android:textColor="#116BB3"
        android:textSize="20.dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10.dp"
        android:layout_marginTop="20.dp"
        android:background="#BCB6B6"
        android:hint="Enter nummber"
        android:maxLines="10"
        android:padding="6.dp"
        android:paddingEnd="10.dp"
        android:textAlignment="textEnd"

        app:layout_constraintEnd_toEndOf="@+id/cal"
        app:layout_constraintStart_toStartOf="@+id/cal"
        app:layout_constraintTop_toBottomOf="@+id/cal" />


    <EditText
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10.dp"
        android:layout_marginTop="20.dp"
        android:background="#BCB6B6"
        android:hint="Result"
        android:maxLines="10"
        android:padding="10.dp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="@id/input1"
        app:layout_constraintStart_toStartOf="@+id/input1"
        app:layout_constraintTop_toBottomOf="@+id/input1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500.dp"
        android:background="#EDA4A4"
        android:orientation="vertical"
        android:weightSum="1"

        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10.dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40.dp"
            android:background="@drawable/border"
            android:backgroundTint="#198DC1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="40.dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/border"
                android:backgroundTint="#FF9800"
                android:text="Ac"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/border"
                android:backgroundTint="#FF9800"
                android:text="C"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/bt1"
                app:layout_constraintTop_toTopOf="@id/bt1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/border"
                android:backgroundTint="#FF9800"
                android:text="%"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/bt2"
                app:layout_constraintTop_toTopOf="@id/bt2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/border"
                android:backgroundTint="#FF9800"
                android:text="/"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/bt3"
                app:layout_constraintTop_toTopOf="@id/bt3" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.dp"
                android:background="@drawable/border"
                android:backgroundTint="#17AF90"
                android:text="7"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/bt1"
                app:layout_constraintTop_toBottomOf="@id/bt1" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.dp"
                android:layout_marginTop="7.dp"
                android:background="@drawable/border"
                android:backgroundTint="#17AF90"
                android:text="8"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/bt5"
                app:layout_constraintTop_toBottomOf="@id/bt2" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.dp"
                android:layout_marginTop="7.dp"
                android:background="@drawable/border"
                android:backgroundTint="#17AF90"
                android:text="9"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/bt6"
                app:layout_constraintTop_toBottomOf="@id/bt3" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/border"
                android:backgroundTint="#FF9800"
                android:text="+"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/bt7"
                app:layout_constraintTop_toTopOf="@id/bt7" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.dp"
                android:background="@drawable/border"
                android:backgroundTint="#17AF90"
                android:text="4"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/bt5"
                app:layout_constraintTop_toBottomOf="@id/bt5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.dp"
                android:layout_marginTop="7.dp"
                android:background="@drawable/border"
                android:backgroundTint="#17AF90"
                android:text="5"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/bt9"
                app:layout_constraintTop_toBottomOf="@id/bt6" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.dp"
                android:layout_marginTop="7.dp"
                android:background="@drawable/border"
                android:backgroundTint="#17AF90"
                android:text="6"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/bt10"
                app:layout_constraintTop_toBottomOf="@+id/bt7" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.dp"
                android:background="@drawable/border"
                android:backgroundTint="#FF9800"
                android:text="-"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/bt11"
                app:layout_constraintTop_toBottomOf="@+id/bt8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.dp"
                android:background="@drawable/border"
                android:backgroundTint="#17AF90"
                android:text="1"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/bt9"
                app:layout_constraintTop_toBottomOf="@id/bt9" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.dp"
                android:layout_marginTop="7.dp"
                android:background="@drawable/border"
                android:backgroundTint="#17AF90"
                android:text="2"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/bt13"
                app:layout_constraintTop_toBottomOf="@id/bt10" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.dp"
                android:layout_marginTop="7.dp"
                android:background="@drawable/border"
                android:backgroundTint="#17AF90"
                android:text="3"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/bt14"
                app:layout_constraintTop_toBottomOf="@id/bt11" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.dp"
                android:background="@drawable/border"
                android:backgroundTint="#FF9800"
                android:text="*"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/bt15"
                app:layout_constraintTop_toBottomOf="@+id/bt12" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.dp"
                android:background="@drawable/border"
                android:backgroundTint="#17AF90"
                android:text="0"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/bt13"
                app:layout_constraintTop_toBottomOf="@+id/bt13" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.dp"
                android:layout_marginTop="7.dp"
                android:background="@drawable/border"
                android:backgroundTint="#17AF90"
                android:text="."
                android:textColor="@color/white"
                android:textSize="20.sp"
                app:layout_constraintStart_toEndOf="@id/bt17"
                app:layout_constraintTop_toBottomOf="@id/bt14" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.dp"
                android:layout_marginTop="7.dp"
                android:background="@drawable/border"
                android:backgroundTint="#17AF90"
                android:text="X"
                android:textColor="@color/white"

                app:layout_constraintStart_toEndOf="@id/bt18"
                app:layout_constraintTop_toBottomOf="@id/bt15" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.dp"
                android:layout_marginTop="7.dp"
                android:background="@drawable/border"
                android:backgroundTint="#FF9800"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30.sp"
                app:layout_constraintStart_toEndOf="@id/bt19"
                app:layout_constraintTop_toBottomOf="@id/bt16"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
