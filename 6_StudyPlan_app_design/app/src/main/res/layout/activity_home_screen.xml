<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_screen"
    android:orientation="vertical"
    android:background="#AFCBDCF2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70.dp"
        android:background="#7749C3">
    </LinearLayout>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="250.dp"
       android:layout_marginTop="30.dp"
       app:cardBackgroundColor="#B77749C3"
       android:layout_marginHorizontal="30.dp"
       app:cardCornerRadius="30.dp"
       >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="135dp"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_marginTop="40.dp">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20.dp"
                   android:text="Basic Algebra"
                   android:textColor="@color/white"
                   android:textSize="17.dp"
                   android:textStyle="bold"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20.dp"
                   android:text="Android 101"
                   android:textColor="#E7E3E3"
                   android:textSize="17.dp"
                   android:layout_marginTop="5.dp"
                  />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20.dp"
                   android:layout_marginTop="20.dp"
                   android:text="February 2, 2026"
                   android:textColor="@color/white"
                   android:textSize="15.dp"
                   android:textStyle="bold"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="20.dp"
                   android:layout_marginTop="5.dp"
                   android:text="Batch 7"
                   android:textColor="#E7E3E3"
                   android:textSize="17.dp" />

               <Button
                   android:id="@+id/signupbtn1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                    android:layout_marginStart="10.dp"
                   android:layout_marginTop="20.dp"
                   android:backgroundTint="#5367D9"
                   android:text="Sign up"
                   android:textSize="16.sp" />
           </LinearLayout>

           <ImageView
               android:layout_width="165dp"
               android:layout_height="160.dp"
               android:src="@drawable/elemett1"
               android:background="@color/white"
               android:layout_marginHorizontal="20.dp"

               android:layout_marginVertical="50.dp"
               />
       </LinearLayout>

   </androidx.cardview.widget.CardView>











    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250.dp"
        android:layout_marginTop="30.dp"
        app:cardBackgroundColor="#BAFF9800"
        android:layout_marginHorizontal="30.dp"
        app:cardCornerRadius="30.dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="40.dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_marginStart="16dp"
                    android:text="Shifts in Production possibily curve"
                    android:textColor="@color/white"
                    android:textSize="14.sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="135.dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="20.dp"
                    android:text="Macroeconomics"
                    android:textColor="#E7E3E3"
                    android:layout_marginTop="5.dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20.dp"
                    android:layout_marginTop="20.dp"
                    android:text="February 2, 2026"
                    android:textColor="@color/white"
                    android:textSize="15.dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20.dp"
                    android:layout_marginTop="5.dp"
                    android:text="Online"
                    android:textColor="#E7E3E3"
                   />

                <Button
                    android:id="@+id/signupbn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20.dp"
                    android:layout_marginTop="20.dp"
                    android:backgroundTint="#5367D9"
                    android:text="Sign up"
                    android:textSize="16.sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="165dp"
                android:layout_height="160.dp"
                android:src="@drawable/element2"
                android:background="@color/white"
                android:layout_marginVertical="52.dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>






    <Button
        android:id="@+id/homebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30.dp"
        android:layout_marginTop="25.dp"
        android:backgroundTint="#AE5367D9"
        android:padding="10.dp"
        android:text="Sign up for another exam"
        android:textColor="#F2F1F1"
        android:textSize="20.sp" />

</LinearLayout>