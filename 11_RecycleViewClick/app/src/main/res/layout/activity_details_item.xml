<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#511F1E1E"
    android:paddingVertical="8.dp"
    tools:context=".Details_item">

    <ImageView
        android:id="@+id/image1details"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="10.dp"
        android:scaleType="centerCrop"
        android:src="@drawable/youtubeimg1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/detailslogoimg1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/youtubeimg1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image1details" />


    <ImageView
        android:id="@+id/notification"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_5"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/detailslogoimg1"
        app:layout_constraintTop_toTopOf="@id/detailslogoimg1"
        app:layout_constraintBottom_toBottomOf="@id/detailslogoimg1"
        />

    <ImageView
        android:id="@+id/like"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/likeee"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/notification"
        app:layout_constraintTop_toTopOf="@id/notification"
        app:layout_constraintBottom_toBottomOf="@id/notification"
        />


    <ImageView
        android:id="@+id/dislike"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dislikee"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/like"
        app:layout_constraintTop_toTopOf="@id/like"
        app:layout_constraintBottom_toBottomOf="@id/like"
        />


    <ImageView
        android:id="@+id/comment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_6"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toEndOf="@id/dislike"
        app:layout_constraintTop_toTopOf="@id/dislike"
        app:layout_constraintBottom_toBottomOf="@id/dislike"
        />

    <ImageView
        android:id="@+id/share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sharee"
        app:layout_constraintBottom_toBottomOf="@id/comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comment"
        app:layout_constraintTop_toTopOf="@id/comment" />
    <TextView
        android:id="@+id/titleDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:text="This is Popular song"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailslogoimg1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10.sp"

/>
</androidx.constraintlayout.widget.ConstraintLayout>